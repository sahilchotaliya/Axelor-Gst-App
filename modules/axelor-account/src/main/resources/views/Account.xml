<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  	https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

	<grid model="com.axelor.account.db.Account" title="Accounts"
		name="account-grid" editable="true">
		<field name="fullName"></field>
		<field name="code"></field>
		<field name="name"></field>
	</grid>

	<form model="com.axelor.account.db.Account" title="Account"
		name="account-form">
		<panel name="mainPanel" title="Overview">
			<field name="fullName" readonly="true"></field>
			<field name="code"></field>
			<field name="name"></field>
		</panel>
	</form>
</object-views>